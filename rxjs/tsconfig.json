{
  "compilerOptions": {

    "target": "es6",
    "sourceMap": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "dist/",
    "outDir": "dist/",
    "paths": {
      "*": ["*"]
    },
    "rootDir": ".",
    "lib": [
      "dom",
      "esnext",
      "scripthost"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "utils/*",
    "index.ts"
  ]
}