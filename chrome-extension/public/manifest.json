{
  "manifest_version": 2,
  "name": "Diffx devtools",
  "description": "Extends devtools with a panel to view and interact with Diffx state",
  "version": "1.4",
  "icons": {
    "16": "logo-16.png",
    "48": "logo-48.png",
    "128": "logo-128.png"
  },
  "devtools_page": "diffx.html",
  "background": {
    "scripts": [
      "diffx-background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "file:///*"
      ],
      "js": [
        "diffx-content-script.js"
      ]
    }
  ]
}
